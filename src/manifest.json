{
  "manifest_version": 3,
  "name": "SpotifyImmersive",
  "version": "2025.04.18.41",
  "permissions": [
    "tabs",
    "activeTab"
  ], 
  "content_scripts": [
    {
      "matches": ["*://*.spotify.com/*"],
      "js": ["DomModifierClass.js","System.js","Agent.js","content.js"],
	  "css": ["style.css","about_tab.css","navbar.css","controlbar.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
